# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=sqlite:/app/production.sqlite
DATABASE_PATH=/app/production.sqlite

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-characters
JWT_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://yourdomainname.com,https://www.yourdomainname.com
CORS_CREDENTIALS=true

# OTP Configuration
OTP_EXPIRY_MINUTES=10

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads

# Email Configuration (Optional)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@yourdomainname.com

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=your-sender-id

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Health Check
ENABLE_CRON_JOBS=true
HEALTH_CHECK_TOKEN=your-health-check-token

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking
SENTRY_DSN=your-sentry-dsn